                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/img23"
                            android:visibility="invisible"
                            android:id="@+id/cg2img3"/>

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/img33"
                            android:visibility="invisible"
                            android:id="@+id/cg3img3"/>
                    </FrameLayout>
                </TableRow>

                <TableRow>
                    <FrameLayout>
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
