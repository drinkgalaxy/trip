                    android:scaleType="centerCrop"
                    android:src="@drawable/img37"
                    android:visibility="invisible"/>
            </FrameLayout>

            <!-- 8번 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_column="1">
                <ImageView
                    android:id="@+id/cg1img8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img18"/>
                <ImageView
                    android:id="@+id/cg2img8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img28"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/cg3img8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img38"
                    android:visibility="invisible"/>
            </FrameLayout>

            <!-- 9번 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_column="2">
                <ImageView
                    android:id="@+id/cg1img9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img19"/>
                <ImageView
                    android:id="@+id/cg2img9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img29"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/cg3img9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img39"
                    android:visibility="invisible"/>
            </FrameLayout>

        </GridLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tripCostText"
            android:textSize="20dp"
            android:text="여행 경비는"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tripIntroText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여행지 소개는"
            android:textSize="20dp" />


    </LinearLayout>
</LinearLayout>