                    </FrameLayout>
                </TableRow>

                <TableRow>
                    <FrameLayout>
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/img17"
                            android:id="@+id/cg1img7"/>

                        <ImageView
                            android:layout_width="150dp"
