                            android:layout_height="150dp"
                            android:src="@drawable/img11"
                            android:id="@+id/cg1img1"/>

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/img21"
                            android:visibility="invisible"
                            android:id="@+id/cg2img1"/>

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/img31"
                            android:visibility="invisible"
                            android:id="@+id/cg3img1"/>
                    </FrameLayout>

                    <FrameLayout>
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/img12"
                            android:id="@+id/cg1img2"/>

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/img22"
                            android:visibility="invisible"
                            android:id="@+id/cg2img2"/>

